{
  "name": "leap-app",
  "version": "1.0.0",
  "type": "module",
  "packageManager": "bun",
  "workspaces": [
    "backend",
    "web"
  ],
  "scripts": {
    "lint": "npm -w web run lint",
    "fix:react-imports": "node scripts/add-react-import.cjs",
    "build": "npm -w backend run build && npm -w web run build",
    "build:web": "npm -w web run build",
    "build:backend": "npm -w backend run build",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.6"
  }
}
